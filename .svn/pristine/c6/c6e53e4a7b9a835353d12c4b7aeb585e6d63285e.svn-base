                                    <tr><td>工作：</td><td><input type="text" name="job" value="{$account_info.job}"/></td></tr>
                                    <tr><td>兴趣：</td><td><input type="text" name="hobby" value="{$account_info.hobby}"/></td></tr>
                                    <tr><td>特长：</td><td><input type="text" name="specialty" value="{$account_info.specialty}"/></td></tr>
                                    <tr><td>学历：</td><td><input type="text" name="edu_history" value="{$account_info.edu_history}"/></td></tr>
                                    <tr>
                                    <td colspan="2">
                                        <input type="hidden" name="account_id" value="{$account_info.id}">
                                        <input type="hidden" name="room_id" value="{$room_info.id}">
                                        <button class="btn btn-success">修改</button>
                                    </td>
                                    </tr>
                                </tbody>
                                
                            </table>
