<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	<title>保存个人信息</title>
	<meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width">
	<meta name="format-detection" content="email=no,address=no,telephone=no">
	<script src="__PUBLIC__/js/jquery-1.9.1.js"></script>
	<link href="__PUBLIC__/css/normalize.css" rel="stylesheet" type="text/css">
	<link href="__PUBLIC__/css/bootstrap.min.css" rel="stylesheet">
	<link href="__PUBLIC__/css/bootstrap-theme.min.css" type="text/css">
	<script src="__PUBLIC__/js/bootstrap.min.js"></script>
	<link href="__PUBLIC__/css/common.css" rel="stylesheet" type="text/css">
	<link href="__PUBLIC__/css/grzx.css" rel="stylesheet" type="text/css">
	<script src="__PUBLIC__/js/mobiscroll.core-2.5.2.js" type="text/javascript"></script>
	<script src="__PUBLIC__/js/mobiscroll.core-2.5.2-zh.js" type="text/javascript"></script>
	<link href="__PUBLIC__/css/mobiscroll.core-2.5.2.css" rel="stylesheet" type="text/css">
	<link href="__PUBLIC__/css/mobiscroll.animation-2.5.2.css" rel="stylesheet" type="text/css">
	<script src="__PUBLIC__/js/mobiscroll.datetime-2.5.1.js" type="text/javascript"></script>
	<script src="__PUBLIC__/js/mobiscroll.datetime-2.5.1-zh.js" type="text/javascript"></script>
	<!-- S 可根据自己喜好引入样式风格文件 -->
	<script src="__PUBLIC__/js/mobiscroll.android-ics-2.5.2.js" type="text/javascript"></script>
	<link href="__PUBLIC__/css/mobiscroll.android-ics-2.5.2.css" rel="stylesheet" type="text/css">
	<script type="text/javascript" src="__PUBLIC__/js/iscroll.js"></script>
	<script type="text/javascript">
var myScroll;

function loaded () {
	myScroll = new IScroll('#wrapper', { mouseWheel: true, click: false });
}

document.addEventListener('touchmove', function (e) { e.preventDefault(); }, false);

$(function () {
$("#birthDay1").val('{$account_info.birthday}').scroller($.extend({preset : 'date'}, { theme: "android-ics light", mode: "scroller", display: 'modal', lang: 'zh',dateFormat : "yy-mm-dd",dateOrder: 'yymmddDD',endYear: (new Date()).getFullYear() + 20})); 
});
</script>
<style>
#wrapper {
	position: absolute;
	top: 44px;
	bottom: 50px;
	left: 0;
	width: 100%;
	overflow: hidden;
	background-color:#f4f4f4;
}
.img-responsive {
	display: inline-block;
	height: auto;
	max-width: 100%;
}

</style>
</head>

<body onload="loaded()">
<form action="{:U('Home/Tenant/edit_myinfo')}" method="post" onsubmit="return check_pass();">
<div id="fwxx">
	<div class="container-fluid header">
    	<div class="row-fluid">
        	<div class="col-xs-4 header-icon1"><a href="{:U('Home/Tenant/myinfo')}"><div class="retun-db-box"><img src="__PUBLIC__/images/icon-db-retun.png" class="icon-db-retun"></div></a></div>
            <div class="col-xs-4 header-icon2"></div>
        </div>
    </div>
    <div id="wrapper">
      <div>
        <div class="container-fluid">
            <div class="row-fluid">
              <div class="col-xs-12">
                <div class="border-bot-xt-wdfj"></div>
              </div>
            </div>
            <!--开-->
            <if condition="$type eq 'realname'">
              <div class="row-fluid">
                <div class="col-xs-12">
	              <ul class="input-text-bc-grxx-box">
	                <li class="text-bc-grxx-box1">姓名：</li>
	                <li class="text-bc-grxx-box2">
	                  <input type="text" value="{$account_info.realname}" name="realname" class="input-text-bc-grxx">
	                  <input type="hidden" name="type" value="realname">
	                </li>
	              </ul>
                </div>
              </div>
            </if>
            <!--关-->

            <!--开-->
            <if condition="$type eq 'sex'">
	          <div class="row-fluid">
	            <div class="col-xs-12">
	              <ul class="grxx-xb-box">
	                <li class="text-grxx-xb-box">性别:
	                  <label for="nan" class="input-grxx-xb-box"><input type="radio" value="1" name="sex" <if condition="$account_info.sex eq 1">checked</if> > 男</label>
	                  <label for="nv" class="input-grxx-xb-box"><input type="radio" value="2" name="sex" <if condition="$account_info.sex eq 2">checked</if>> 女</label>
	                  <input type="hidden" name="type" value="sex">
	                </li>
	              </ul>
	            </div>
	          </div>
	        </if>
	        <!--关-->

	        <!--开-->
	        <if condition="$type eq 'birthday'">
              <div class="row-fluid">
                <div class="col-xs-12">
	              <ul class="input-text-bc-grxx-box">
	                <li class="text-bc-grxx-box1">生日：</li>
	                <li class="text-bc-grxx-box2">
	                 <input type="text" name="birthday" id="birthDay1" class="input-text-bc-grxx" readonly="">
	                 <input type="hidden" name="type" value="birthday">
	                </li>
	              </ul>
                </div>
              </div>
             </if>
            <!--关-->

            <!--开-->
            <if condition="$type eq 'tag'">
              <div class="row-fluid">
                <div class="col-xs-12">
	              <ul class="input-text-bc-grxx-box">
	                <li class="text-bc-grxx-box1">个性签名：</li>
	                <li class="text-bc-grxx-box2">
	                  <input type="text" value="{$account_info.tag}" name="tag" class="input-text-bc-grxx">
	                  <input type="hidden" name="type" value="tag">
	                </li>
	              </ul>
                </div>
              </div> 
            </if>
            <!--关-->

            <!--开-->
            <if condition="$type eq 'password'">
              <div class="row-fluid">
                <div class="col-xs-12">
	              <ul class="input-text-bc-grxx-box">
	                <li class="text-bc-grxx-box1"></li>
	                <li class="text-bc-grxx-box">
	               	 请输入原密码:<input type="password" value="" name="old" id="old" class="input-text-bc-grxx"><br>
	               	请输入新密码:<input type="password" value="" name="password" id="new1" class="input-text-bc-grxx"><br>
	               	再次输入密码:<input type="password" value="" name="repassword" id="new2" class="input-text-bc-grxx"><br>
	               	<input type="hidden" name="type" value="password">
	               	<span style="color:red"></span>
	                </li>
	              </ul>
                </div>
              </div>
              <script>
              	function check_pass(){
              		if ( $("#old").val() == '' ){
              			alert("原密码不能为空!");
              			return false;
              		}
              		if ( $("#new1").val() == '' ){
              			alert("密码不能为空!");
              			return false;
              		}
              		if ( $("#new2").val() == '' ){
              			alert("密码不能为空!");
              			return false;
              		}
              	}
              </script>
            </if>
            <!--关-->
          </div>
        </div>
      </div>
    </div>
  
  <div class="container-fluid button">
    <div class="row-fluid button-ds">
        <div class="col-xs-12 padding-left-right-24">
        	<div class="button-ckzi-col12"><input type="submit" value="保存" class="button-htzh-dx"></div>
        </div>
    </div>
  </div>


</form>

</body>
</html>