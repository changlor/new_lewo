* {
	margin: 0;
	padding: 0;
}
body {
	background-color: #48dfc2;
}
.header {
	width: 100%;
	height: auto;
	position: relative;
	overflow: hidden;
}
.content {
	width: 800px;
	height: auto;
	margin: 0 auto;
	padding: 20px 0;
}
.content .hdxq {
	width: 100%;
	height: 526px;
	margin:0 auto;
	background:url(../images/58page/hdxq.png) no-repeat;
	background-size: 100%;
}
.content .ppjs {
	width: 100%;
	height: 610px;
	margin:0 auto;
	background:url(../images/58page/ppjs.png) no-repeat;
	background-size: 100%;
	position: relative;
}
.content .ppjs:before {
	content: "";
	width: 120px;
	height: 132px;
	display: block;
	position: absolute;
	left: -120px;
	bottom: -20px;
	background:url(../images/58page/ppjs_left_icon.png) no-repeat;
	background-size: 100%;
}
.content .ppjs:after {
	content: "";
	width: 150px;
	height: 291px;
	display: block;
	position: absolute;
	right: -136px;
	top: 250px;
	background:url(../images/58page/ppjs_right_icon.png) no-repeat;
	background-size: 100%;
}
.content .image_list {
	position: relative;
}
.content .image_list img {
	vertical-align:bottom;
	display:block
}
.content .image_list:after {
	content: "";
	position: absolute;
	width: 200px;
	height: 277px;
	left: -180px;
	bottom: -180px;
	background:url(../images/58page/line.png) no-repeat;
	background-size: 100%;
}
.footer {
	width: 600px;
	height: 450px;
	background:url(../images/58page/footer.png) no-repeat;
	background-size: 100%;
	margin:0 auto;
}
.side {
	width: 160px;
	height: 373px;
	position: fixed;
	z-index: 999;
	right: 10px;
	top: 27%;
	background:url(../images/58page/side.png) no-repeat;
	background-size: 100%;
}
.loveto {
	text-align: center;
	color: #fff;
	font-size: 22px;
	text-decoration: none;
	font-family: "微软雅黑";
	font-weight: bold;
	margin-bottom: 20px;
}
.loveto b {
	font-size: 32px;
}
.top a{
	display: block;
	text-align: center;
	color: #fff;
	font-size: 20px;
	text-decoration: none;
	font-family: "微软雅黑";
	font-weight: bold;
}

.car03 {
	/*left to right*/
	width: 69px;
	height: 47px;
	background:url(../images/58page/car03.png) no-repeat;
	position: absolute;
	bottom: 4px;
	left: -200px;
	z-index: 8;
	animation: move03 15s ease 1.5s infinite;
}

@keyframes move03 {
	0%{
		transform:translate(0px,0px);
	}
	100%{
		transform:translate(2000px,0px);
	}
}

