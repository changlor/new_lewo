<!--main-container-part-->
<div id="content">
<!--breadcrumbs-->
  <div id="content-header">
    <div id="breadcrumb"> <a href="index.html" title="返回首页" class="tip-bottom"><i class="icon-home"></i> 首页</a> <a>工作台</a> <a class="current">待办列表</a></div>
  </div>
<!--End-breadcrumbs-->
  <div class="container-fluid">
    <div class="widget-box">
      <div class="widget-title"> <span class="icon"><i class="icon-th"></i></span>
        <h5>待办列表</h5>
      </div>
      <div class="widget-content nopadding">
        <form action="#">
          <table class="table">
            <tbody>
              <tr>
              <td>
                <a href="#" class="btn btn-danger">退房({$TFcount})</a>
                <a href="#" class="btn btn-info">转租({$ZFcount})</a>
                <a href="#" class="btn btn-success">换房({$HFcount})</a>
                <a href="{:U('Admin/Task/money_back',array('back_type'=>1))}" class="btn btn-warning">例行打款({$LXDKcount})</a>
                <a href="{:U('Admin/Task/money_back',array('back_type'=>2))}" class="btn btn-warning">例行打款到余额({$LXDKYEcount})</a>
              </td>
              </tr>
            </tbody>
          </table>
        </form>
        <table class="table table-bordered data-table">
          <thead>
            <tr>
              <th>类型</th>
              <th>房屋</th>
              <th>房间</th>
              <th>床位</th>
              <th>租客</th>
              <th>创建时间</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
          <volist name="schedule_list" id="vo">
            <tr>
              <td>{$vo.schedule_type_name}</td>
              <td>{$vo.room_info.house_code}</td>
              <td>{$vo.room_info.room_code}</td>
              <td>{$vo.room_info.bed_code}</td>
              <td>{$vo.realname}</td>
              <td>{$vo.create_time}</td>
              <td>
                <switch name="vo.schedule_type" >
                  <case value="1">
                    <!--退房-->
                    <switch name="vo.status" >
                      <case value="2">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/dispose_bill',array('schedule_id'=>$vo['id']))}">办理</a>
                      </case>
                      <case value="3">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/checkout_pay',array('schedule_id'=>$vo['id']))}">发送账单</a>
                      </case>
                      <case value="4">
                        <a class="btn btn-danger btn-mini">未确认</a>
                      </case>
                      <case value="5">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/confirm_checkout_pay',array('schedule_id'=>$vo['id']))}">确认账单</a>
                      </case>
                    </switch>
                  </case>
                  
                  <case value="3">
                    <!--换房-->
                    <switch name="vo.status" >
                      <case value="2">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/dispose_bill',array('schedule_id'=>$vo['id']))}">办理</a>
                      </case>
                      <case value="3">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/checkout_pay',array('schedule_id'=>$vo['id']))}">发送账单</a>
                      </case>
                      <case value="4">
                        <a class="btn btn-danger btn-mini">未确认</a>
                      </case>
                      <case value="5">
                        <a class="btn btn-info btn-mini" href="{:U('Admin/Task/confirm_checkout_pay',array('schedule_id'=>$vo['id']))}">确认账单</a>
                      </case>
                    </switch>
                  </case>
                </switch>
                <a class="btn btn-info btn-mini" href="{:U('Admin/Task/update_schedule',array('schedule_id'=>$vo['id']))}">修改</a>
                <a class="btn btn-danger btn-mini" href="#">删除</a>
              </td>
            </tr>
          </volist>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!--main-container-part-->
