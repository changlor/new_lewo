<body onload="loaded()">
<div id="fwxx">
	<div class="container-fluid header">
    	<div class="row-fluid">
        	<div class="col-xs-2 header-icon1"><a href="javascript:window.history.back(-1)"><div class="retun-db-box"><img src="__PUBLIC__/images/icon-db-retun.png" class="icon-db-retun"></div></a></div>
        </div>
    </div>
    <div id="wrapper">
        <div>
			<div class="container-fluid" id="XS">
                <div class="row-fluid">
                    <div class="col-xs-12">
                    	<div class="row-fluid">
                            <div class="col-xs-12"><div class="innre-bill-ls-dsh"></div></div>
                        </div>
                        <div class="row-fluid">
                            <form action="{:U('Home/Steward/check_ammeter')}" method="post" onsubmit="return checkform();">
                            <table class="table table-bordered table-striped">
                                <tbody>
                                    <tr><td colspan="2" align="center">{$schedule_type_name}信息</td></tr>
                                    <tr><td>房间编号</td><td><input type="text" value="{$room_info['house_code']}"></td></tr>
                                    <tr><td>租客姓名</td><td>{$account_info['realname']}</td></tr>
                                    <tr><td>联系电话</td><td>{$account_info['mobile']}</td></tr>
                                    <tr><td>申请日期</td><td>{$schedule_info['create_time']}</td></tr>
                                    <tr><td>约定时间</td><td>{$schedule_info['appoint_time']}</td></tr>
                                </tbody>
                                <tbody>
                                    <tr><td colspan="2" align="center">房屋电表</td></tr>
                                    <tr><td>截至水表：</td><td><input id="zS" type="text" name="zS" value=""></td></tr>
                                    <tr><td>截至电表：</td><td><input id="zD" type="text" name="zD" value=""></td></tr>
                                    <tr><td>截至气表：</td><td><input id="zQ" type="text" name="zQ" value=""></td></tr>
                                    <tr><td>房间电表:</td><td><input id="roomD" type="text" name="roomD" value=""></td></tr>
                                    <tr><td colspan="2" align="center">验房信息</td></tr>
                                    <!-- <tr><td colspan="2"><div id="status-btn" class="btn btn-success">一切正常</div></td></tr> -->
                                    <tr><td colspan="2"><input id="status-info" name="msg" type="text" value="一切正常"></td></tr>
                                    <tr><td>维修费</td><td><input type="text" name="wx_fee" value="" placeholder=""></td></tr>
                                    <tr><td>维修信息</td><td><input type="text" name="wx_des" value="" placeholder=""></td></tr>
                                    <if condition="$schedule_type eq C('schedule_type_tf')">
                                    <tr><td colspan="2" align="center">
                                        <input type="radio" name="check-out-type" value="1" checked>正常退房
                                        <input type="radio" name="check-out-type" value="2">违约退房
                                    </td></tr>
                                    <tr>
                                    </if>
                                    <td colspan="2" align="center">
                                        <input type="hidden" name="schedule_id" value="{$schedule_id}">
                                        <input type="hidden" name="schedule_type" value="{$schedule_type}">
                                        <input class="btn btn-success" type="submit" value="提交">
                                    </td>
                                    </tr>
                                </tbody>
                                
                            </table>
                            </form>
                        </div>
                        <!--滑动过度区域-->
                        <div class="row-fluid">
                            <div class="col-xs-12"><div style="height:90px;"></div></div>
                        </div>
                        <!--滑动过度区域-->
                    </div>
                </div>
			</div>          
        </div>  
    </div>
</div>
</body>
